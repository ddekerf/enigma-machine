# EditorConfig is awesome: https://editorconfig.org
root = true

# Default settings for all files
[*]
charset = utf-8
insert_final_newline = true
indent_style = space
indent_size = 4

# C# specific formatting and analyzer preferences
[*.cs]
dotnet_sort_system_directives_first = true
csharp_new_line_before_open_brace = all
csharp_style_namespace_declarations = block_scoped:suggestion

# Avoid failing CI on stylistic namespace preference; treat as suggestion
dotnet_diagnostic.IDE0160.severity = suggestion

# Whitespace rules
csharp_indent_block_contents = true
csharp_indent_braces = false
csharp_indent_case_contents = true
csharp_indent_switch_labels = true
csharp_indent_labels = flush_left
root = true

[*.cs]
dotnet_diagnostic.CA2007.severity = none
# Prefer culture-invariant conversions
# Enforced by code; add more rules as needed
csharp_style_var_elsewhere = true:suggestion
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
# Require file-scoped namespaces (optional; project uses block style today)
csharp_style_namespace_declarations = block_scoped:warning
# Treat warnings as errors is already enabled in csproj for Domain
